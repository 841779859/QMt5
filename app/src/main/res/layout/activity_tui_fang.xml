<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="55dp"
        android:background="#3F51B5"
        android:id="@+id/tui_fang_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/zhufang_end"
            android:text="@string/zfjs"
            android:textColor="#0A0A0A"
            android:textSize="50px"
            android:layout_centerVertical="true" />
        <Button
            android:id="@+id/dacha_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/dacha"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/zhufang_end" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/counter"
        android:layout_marginTop="70dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/cup"/>
        <TextView
            android:id="@+id/live_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:text="@string/live_time"
            android:textSize="40px" />

        <TextView
            android:id="@+id/shuchu_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:textSize="50px" />
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="分"
            android:layout_marginTop="12dp"
            android:textColor="#000000"
            android:layout_marginLeft="50dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_marginTop="205dp"
        android:background="#9e9e9e" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="150dp"
        android:id="@+id/pay">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/money"/>

        <TextView
            android:id="@+id/bczf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zf"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:textSize="50px" />

        <TextView
            android:id="@+id/money"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="50px" />
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="元"
            android:textColor="#000000"
            android:layout_marginLeft="80dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_marginTop="130dp"
        android:background="#9e9e9e" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="222dp"
        android:id="@+id/evaluate">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/telex"/>
        <TextView
            android:id="@+id/pingjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/pj"
            android:layout_marginTop="6dp"
            android:textSize="40px" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:layout_marginTop="285dp"
        android:background="#9e9e9e" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="320dp"
        android:gravity="center">


    </LinearLayout>
    <Button
        android:id="@+id/zhifu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/zhifu"
        />

</RelativeLayout>