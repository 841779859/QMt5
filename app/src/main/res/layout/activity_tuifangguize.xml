<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#3F51B5"
        android:id="@+id/aa4">
        <Button
            android:id="@+id/jia20"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/img04"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/xx1"
            android:text="@string/wtxq"
            android:textColor="#0A0A0A"
            android:textSize="50px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/jia20"
            android:layout_toEndOf="@+id/jia20"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="383dp"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:layout_below="@+id/aa4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/aa5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/xx2"
            android:text="@string/tugz"
            android:textSize="60px"
            android:textColor="#3D3D3D"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="384dp"
        android:layout_height="380dp"
        android:background="#FFFFFF"
        android:id="@+id/aa6"
        android:layout_below="@+id/aa5"
        android:layout_alignLeft="@+id/aa5"
        android:layout_alignStart="@+id/aa5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/xx3"
            android:text="@string/tuifangguizea"
            android:textSize="50px"
            android:textColor="#3D3D3D"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:layout_marginTop="470dp"
        android:background="#DDDDDD" />
    <RelativeLayout
        android:layout_width="384dp"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/aa5"
        android:layout_alignStart="@+id/aa5"
        android:id="@+id/aa15">
        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/jia8"
            android:textSize="40px"
            android:text="联系在线客服"
            android:background="#FFE4E1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>


