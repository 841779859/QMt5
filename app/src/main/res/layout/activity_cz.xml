            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/hkpb16"
            android:textSize="40px"
            android:text="联系在线客服"
            android:background="#FFE4E1"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
