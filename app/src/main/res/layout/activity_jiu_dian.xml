<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/activity_jiu_dian"
    tools:context=".House.JiuDian">
    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:background="@color/colorAccent">
    <TextView
        android:id="@+id/buju_name"
        android:textSize="20dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="5dp"
        android:layout_width="300dp"
        android:layout_height="40dp" />
    </RelativeLayout>
    <!--轮播图布局容器-->
    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <!--轮播图控件-->
        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="180dp"/>
        <!--小点以及文字布局容器-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="#33000000"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <!--轮播图文字-->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="图片标题"
                android:textColor="@color/white"/>
            <!--小点布局容易-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:id="@+id/dot_0"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/dot_focused"/>

                <View
                    android:id="@+id/dot_1"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/dot_normal"/>

                <View
                    android:id="@+id/dot_2"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/dot_normal"/>

                <View
                    android:id="@+id/dot_3"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/dot_normal"/>

                <View
                    android:id="@+id/dot_4"
                    android:layout_width="5dip"
                    android:layout_height="5dip"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/dot_normal"/>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/buju_addr"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:textSize="20dp"
        android:background="@color/white"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="5dp"
        android:background="@color/gray"></RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:id="@+id/buju_price"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textSize="20dp"
            android:layout_marginLeft="40dp"
            android:background="@color/white"/>
        <TextView
            android:text="@string/danjia"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_width="150dp"
            android:layout_height="50dp" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="5dp"
        android:background="@color/gray"></RelativeLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:text="@string/information"/>
    </LinearLayout>

    <TextView
        android:id="@+id/buju_introduce"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:textSize="20dp"
        android:background="@color/white" />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:text="@string/problem"
        android:textSize="20dp"
        android:id="@+id/wenti"
        android:textColor="#000000"
        android:background="@color/white" />
    <LinearLayout
        android:layout_width="300dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/yuyue"
            android:background="@color/yuyue"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="@string/yuyue" />
    </LinearLayout>
</LinearLayout>