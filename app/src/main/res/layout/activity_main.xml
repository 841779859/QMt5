<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:weimain="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.asus.qmt5.BasicView.MainActivity">
    <!--显示主要内容-->
    <com.example.asus.qmt5.BasicView.NoScrollViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </com.example.asus.qmt5.BasicView.NoScrollViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@drawable/tab_bg">
        <com.example.asus.qmt5.BasicView.ChangeIcon
            android:id="@+id/id_changeicon_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            weimain:icon="@drawable/img_icon1"
            weimain:text="@string/icon_text1"
            android:padding="5dp"
            weimain:text_size="12sp"
            weimain:color="#ff45c01a"/>
        <com.example.asus.qmt5.BasicView.ChangeIcon
            android:id="@+id/id_changeicon_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            weimain:icon="@drawable/img_icon2"
            weimain:text="@string/icon_text2"
            weimain:text_size="12sp"
            weimain:color="#ff45c01a" />

        <com.example.asus.qmt5.BasicView.ChangeIcon
            android:id="@+id/id_changeicon_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            weimain:icon="@drawable/img_icon3"
            weimain:text="@string/icon_text3"
            weimain:text_size="12sp"
            weimain:color="#ff45c01a" />
    </LinearLayout>
    <Button
        android:id="@+id/out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出"/>

</LinearLayout>
